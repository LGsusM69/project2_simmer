<!-- view template for displaying list of recipes-->

</br> </br>


<div class="recipe-list">
    <% recipes.forEach(recipe => { %>
        <div class="recipe-item">
            <h2><%= recipe.title %></h2>
            <p><%= recipe.description %></p>
            <p><strong>Ingredients:</strong> <%= recipe.ingredients %></p>
            <p><strong>Instructions:</strong> <%= recipe.instructions %></p>
            <img src="<%= recipe.imgURL %>" alt="<%= recipe.title %> Image">

            <!-- Save Recipe feature: -->
            <% if(user) { %>
                <form action="/recipes/<%= recipe._id %>/users/<%=user._id%>" method="post">
                    <input type="hidden" name="recipeId" value="<%= recipe.id %>">
                    <button type="submit" class="save-btn">Save Recipe</button>
                    <button type="submit" class="view-btn">View Details</button>
                </form>
            <% } %>
        </div>
    <% }) %>
</div>
